{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main-capability",
  "description": "Main application capability with filesystem access",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:path:default",
    "core:path:allow-resolve-directory",
    "core:window:default",
    "fs:allow-read-dir",
    "fs:allow-read-file",
    "fs:allow-read-text-file",
    "fs:allow-write-file",
    "fs:allow-write-text-file",
    "fs:allow-exists",
    "fs:allow-create",
    "fs:allow-mkdir",
    "shell:allow-execute",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$HOME/.clawkeeper" },
        { "path": "$HOME/.clawkeeper/**" }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "curl",
          "cmd": "curl",
          "args": true,
          "sidecar": false
        }
      ]
    }
  ]
}
